<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.georgesdoe.wpebook.ui.MainWindowController">
   <top>
      <HBox spacing="10.0" style="-fx-padding: 10px; -fx-background-color: #0073aa;" BorderPane.alignment="CENTER">
         <children>
            <Label text="URL:" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <TextField fx:id="urlField" style="-fx-border-radius: 0px; -fx-background-radius: 0px;" text="https://creepypasta.com" />
            <Button mnemonicParsing="false" onAction="#handleFetch" style="-fx-background-radius: 0px; -fx-border-radius: 0px; -fx-background-color: white;" text="Fetch Categories" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </top>
   <left>
   </left>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="categoryList" minWidth="-Infinity" prefWidth="350.0" />
            <TilePane alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button alignment="CENTER" disable="true" mnemonicParsing="false" text="Fetch Posts" TilePane.alignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </TilePane>
         </children>
      </VBox>
   </left>
</BorderPane>
